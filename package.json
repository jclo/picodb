{
  "name": "picodb",
  "version": "0.10.0",
  "description": "A tiny in-memory database (MongoDB like) that stores JSON documents",
  "main": "index.js",
  "scripts": {


    "build": "gulp build",
    "watch": "gulp watch",
    "makedist": "gulp",
    "makelib": "gulp makenoparentlib",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov _mocha ./test/main.js",
    "check-coverage": "nyc check-coverage --statements 99.0 --branches 97.0 --functions 100 --lines 99.0",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "report": "nyc report",
    "precommit": "npm run makedist && npm run test && npm run check-coverage && npm run report"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/picodb.git"
  },
  "keywords": [
    "mongodb",
    "mongodb-like",
    "in-memory",
    "database",
    "db",
    "nosql",
    "json"
  ],
  "author": {
    "name": "jclo",
    "email": "jclo@mobilabs.fr",
    "url": "http://www.mobilabs.fr/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/picodb/issues"
  },
  "homepage": "https://github.com/jclo/picodb",
  "dependencies": {
  },
  "devDependencies": {
    "chai": "4.1.1",
    "coveralls": "2.13.1",
    "cross-env": "5.0.5",
    "del": "3.0.0",
    "eslint": "3.19.0",
    "eslint-config-airbnb-base": "11.2.0",
    "eslint-plugin-import": "2.7.0",
    "gulp": "3.9.1",
    "gulp-concat": "2.6.1",
    "gulp-footer": "1.0.5",
    "gulp-header": "1.8.9",
    "gulp-replace": "0.6.1",
    "gulp-uglify": "3.0.0",
    "husky": "0.14.3",
    "mocha": "3.5.0",
    "nyc": "10.3.0",
    "opener": "1.4.3",
    "require-dir": "0.3.2",
    "run-sequence": "2.1.0"
  }
}
