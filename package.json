{
  "name": "picodb",
  "version": "0.8.0",
  "description": "PicoDB is a tiny in-memory database that stores JSON documents",
  "main": "index.js",
  "scripts": {
    "build": "gulp",
    "watch": "gulp watch",
    "test": "istanbul cover -x ./test/main.js _mocha -- -R spec ./test/main.js",
    "check-coverage": "istanbul check-coverage --statements 99.0 --branches 98.0 --functions 100 --lines 99.0",
    "display-coverage": "opener ./coverage/lcov-report/index.html",
    "report-coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jclo/picodb.git"
  },
  "keywords": [
    "mongodb",
    "mongodb-like",
    "in-memory",
    "database",
    "db",
    "nosql",
    "json"
  ],
  "author": {
    "name": "jclo",
    "email": "jclo@mobilabs.fr",
    "url": "http://www.mobilabs.fr/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jclo/picodb/issues"
  },
  "homepage": "https://github.com/jclo/picodb",
  "devDependencies": {
    "chai": "3.5.0",
    "coveralls": "2.11.14",
    "del": "2.2.2",
    "eslint": "3.7.1",
    "eslint-config-airbnb-base": "8.0.0",
    "eslint-plugin-import": "1.16.0",
    "ghooks": "1.3.2",
    "gulp": "3.9.1",
    "gulp-concat": "2.6.0",
    "gulp-header": "1.8.8",
    "gulp-replace": "0.5.4",
    "gulp-uglify": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.1.0",
    "opener": "1.4.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  }
}
